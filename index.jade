doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, minimum-scale=1.0, initial-scale=1, user-scalable=no")
    title Our super awesome game

    script(type="text/javascript", src="bower_components/platform/platform.js")
    script(type="text/javascript", src="bower_components/sweetalert/lib/sweet-alert.min.js")

    link(rel="import", href="bower_components/core-toolbar/core-toolbar.html")
    link(rel="import", href="bower_components/core-icons/core-icons.html")
    link(rel="import", href="bower_components/font-roboto/roboto.html")
    link(rel="import", href="bower_components/core-drawer-panel/core-drawer-panel.html")
    link(rel="import", href="bower_components/paper-icon-button/paper-icon-button.html")
    link(rel="import", href="bower_components/paper-dialog/paper-dialog-transition.html")
    link(rel="import", href="bower_components/paper-dialog/paper-dialog.html")
    link(rel="import", href="bower_components/paper-input/paper-input.html")
    link(rel="import", href="bower_components/paper-button/paper-button.html")
    link(rel="import", href="bower_components/paper-progress/paper-progress.html")
    link(rel="import", href="bower_components/paper-radio-button/paper-radio-button.html")
    link(rel="import", href="bower_components/paper-radio-group/paper-radio-group.html")
    link(rel="import", href="bower_components/core-tooltip/core-tooltip.html")
    link(rel="import", href="bower_components/paper-shadow/paper-shadow.html")


    link(rel="stylesheet", type="text/css", href="bower_components/sweetalert/lib/sweet-alert.css")
    link(rel="stylesheet", type="text/css", href="assets/css/main.css")
  body(fullbleed, unresolved)
    
    core-drawer-panel#drawerPanel

      #drawer-panel(drawer)
        core-toolbar#navheader
          span Timeline
        #timeline_content

      #main-panel(main)

        core-toolbar#mainheader
          paper-icon-button#navicon(icon="announcement")
          span(flex) Our Fun Game

          .money_shop_tr
            paper-button(onclick="open_shop()")
              span.money_count 6000
              | :money_with_wings:
            paper-icon-button(icon="shopping-cart", onclick="open_shop()")

        .fight_area.dpn

          .creatures
            .player
              h1
                core-tooltip(label="Hey", position="right")
                  span.name Dymynator
                span.lvl LVL
                  span 100
              paper-progress(value="70")
            .enemy
              h1
                core-tooltip(label="Ho", position="left")
                  span.name Dymynator
                span.lvl LVL
                  span 1
              paper-progress(value="20")
        
          .select_attack
            h3 Choose an attack
            .attack_btns
              paper-button(raised) Habs-Hamster
              paper-button(raised) Scharfer Blick
              paper-button(raised) Beißerchen


    paper-dialog#dialog_choose_name.paper-dialog-transition.paper-dialog-transition-bottom(heading="Choose your Name", autoclosedisabled, opened="false", transition="paper-dialog-transition-bottom" backdrop)
      p Choose wisely. You cannot change your name later.
      paper-input(value="Bob", required="true")
      paper-button(onclick="set_name()", autofocus, role="button" affirmative) Accept

    paper-dialog#dialog_choose_creature.paper-dialog-transition.paper-dialog-transition-bottom(heading="Choose your Creature and Language", opened="false", autoclosedisabled, transition="paper-dialog-transition-bottom" backdrop)
      p
        | Choose wisely. The creature will determine the language you want to learn and your strengths and weaksnesses. As well as the part of the story you are going to play first.
      paper-button(onclick="set_character('Ferreon'); set_storyline('english');", raised="", role="button" affirmative) English
      paper-button(onclick="set_character('Emmil'); set_storyline('latin');", raised="", role="button" affirmative) Latin
      paper-button(onclick="set_character('Skopper'); set_storyline('french');", raised="", role="button" affirmative) French

    paper-dialog#dialog_backstory(transition="paper-dialog-transition-bottom", autoclosedisabled, class="paper-dialog-transition paper-dialog-transition-bottom" backdrop)

    .dialog

    paper-dialog(transition="paper-dialog-transition-bottom", class="paper-dialog-transition paper-dialog-transition-bottom shop", backdrop)
      .card
        h3 Dymynator
        span.block HEALTH: 450
        span.block TYPE: :hamster:
        span.block ATTACKS:
        ul
          li Beißerchen
          li aoeuoaeu
          li apypfypyf.pyf
        paper-button.buy(disabled) 4000 :money_with_wings:

      .card
        h3 Birwon
        span.block HEALTH: 350
        span.block TYPE: :gb:
        span.block ATTACKS:
        ul
          li Style-mode
          li Bubble-gum-shooter
          li Drink-juice
        paper-button.active ACTIVE

      .card
        core-tooltip(label="Ho", position="bottom")
          h3 Hugulo
        span.block HEALTH: 420
        span.block TYPE: :fr:
        span.block ATTACKS:
        ul
          li Jump-kick
          li Rainbow-poop
          li Easter-egg-attack
        paper-button.select SELECT

    script(src="bower_components/jquery/dist/jquery.min.js")
    script(src="//connect.soundcloud.com/sdk.js")
    script(src="bower_components/emojify/emojify.min.js")
    script(src="assets/js/main.js")
